{
  "compilerOptions": {
    "rootDir": "src",

    "target": "es2016",
    "lib": ["es6"],
    "moduleResolution": "node",

    "module": "commonjs",

    "types": ["node", "@types/jest", "./src/@types/controllers.d.ts", "./src/@types/user.d.ts"],
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "allowJs": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.js"]
}
