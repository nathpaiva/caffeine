{
  "compilerOptions": {
    "rootDir": "src",

    "target": "es2016",
    "lib": ["es6"],
    "moduleResolution": "node",

    "module": "commonjs",

    "types": ["node"],
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "allowJs": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },

  "exclude": ["src/**/*.js"]
}
