{
  "name": "root",
  "private": true,
  "scripts": {
    "dev": "lerna run --stream start",
    "test": "lerna run --stream test",
    "test:api": "lerna run --stream --scope api test",
    "dev:api": "lerna run --stream --scope api start",
    "dev:view": "lerna run --scope caffeine start",
    "bootstrap": "lerna bootstrap",
    "reset:yarn": "rm -rf yarn.lock packages/**/yarn.lock",
    "reset:node": "rm -rf node_modules packages/**/node_modules"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
